<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"

      login-required="true">

  <description>handle a change request</description>
  
  <begin-conversation join="true" flush-mode="manual" />
  
  <action execute="#{changeRequestAction.setTaskDbid(param.taskDbid)}" 
          on-postback="false" />



  <navigation >
      
   <!-- spawn to handle -->
   <rule if-outcome="handleDone">
      <redirect>
         <param name="taskDbid" value="#{changeRequestAction.taskDbid}"/>
      </redirect>
   </rule>
      
   <!-- spawn to review -->   
   <rule if-outcome="reviewDone">
      <redirect>
         <param name="taskDbid" value="#{changeRequestAction.taskDbid}"/>
      </redirect>
   </rule>
   
   <rule if-outcome="handledDone">
      <end-conversation/>
      <redirect view-id="/pages/user/taskList.xhtml" />
   </rule>

   <rule if-outcome="forwardDone">
      <end-conversation/>
      <redirect view-id="/pages/user/taskList.xhtml" />
   </rule>
   
   <rule if-outcome="transferDone">
      <end-conversation/>
      <redirect view-id="/pages/user/taskList.xhtml" />
   </rule>
 
   <rule if-outcome="canceled">
      <end-conversation/>
      <redirect view-id="/pages/user/taskList.xhtml" />
   </rule>

   <rule if-outcome="saved">
      <end-conversation/>
      <redirect view-id="/pages/user/taskList.xhtml" />
   </rule>
   
   <rule if-outcome="invalid">
      <redirect>
         <param name="taskDbid" value="#{changeRequestAction.taskDbid}"/>
      </redirect>
   </rule>
   
   <rule if-outcome="unavailableTask">
      <end-conversation/>
      <redirect view-id="/pages/user/taskList.xhtml" />
   </rule>

  </navigation>



</page>
