<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"

      login-required="true">

  <description>assign a change request (PE)</description>
  
  <begin-conversation join="true" flush-mode="manual" />
  
  <action execute="#{changeRequestAction.setTaskDbid(param.taskDbid)}" 
          on-postback="false" />



  <navigation>

   <rule if-outcome="reviewDone">
      <redirect>
         <param name="taskDbid" value="#{changeRequestAction.taskDbid}"/>
      </redirect>
   </rule>
 
   <!-- this does a two step transition right to the next tasks UI instead of
        calling the taskList page... -->
   <rule if-outcome="toRealizeDone">
      <redirect view-id="#{jbpmDispatcher.doTask(changeRequestAction.getTaskDbid('changerequest.realize'))}">
        <param name="visibleFacet" value="implement" />
        <param name="taskDbid" value="#{changeRequestAction.getTaskDbid('changerequest.realize')}" />
      </redirect>
   </rule>

   <rule if-outcome="toCancel2Done">
      <end-conversation/>
      <redirect view-id="/pages/user/taskList.xhtml" />
   </rule>


       
   <rule if-outcome="forwardDone">
      <end-conversation/>
      <redirect view-id="/pages/user/taskList.xhtml" />
   </rule>

   <rule if-outcome="canceled">
      <end-conversation/>
      <redirect view-id="/pages/user/taskList.xhtml" />
   </rule>

   <rule if-outcome="saved">
      <end-conversation/>
      <redirect view-id="/pages/user/taskList.xhtml" />
   </rule>
   
   <rule if-outcome="invalid">
      <redirect>
         <param name="taskDbid" value="#{changeRequestAction.taskDbid}"/>
      </redirect>
   </rule>
   
   <rule if-outcome="unavailable">
      <end-conversation/>
      <redirect view-id="/pages/user/taskList.xhtml" />
   </rule>

  </navigation>



</page>
